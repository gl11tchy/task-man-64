# Database connection
DATABASE_URL=postgresql://user:pass@host/db

# Polling configuration
POLL_INTERVAL_MS=10000

# Work directory for cloning repos
WORK_DIR=/tmp/autoclaude

# Unique identifier for this daemon instance
INSTANCE_ID=autoclaude-1

# Get these column IDs from your taskman64 database
# Use: SELECT id, name FROM kanban_columns WHERE project_id = 'your-project-id';
BACKLOG_COLUMN_ID=
IN_PROGRESS_COLUMN_ID=
RESOLVED_COLUMN_ID=

# Maximum number of concurrent tasks to process
MAX_CONCURRENT=1

# Claim timeout in milliseconds (default: 1 hour)
# If a task is claimed but not completed in this time, it will be released
CLAIM_TIMEOUT_MS=3600000

# Maximum retry attempts before giving up on a task (default: 3)
# Tasks that exceed this limit stay in backlog with last_error set
MAX_RETRY_ATTEMPTS=3

# Cleanup work directories after successful task completion (default: true)
# Set to "false" to keep directories for debugging
CLEANUP_ON_SUCCESS=true
